<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-inverse {
            background: #A4B48C;
            border-color: #A4B48C;
        }
            .navbar-inverse .navbar-nav li a {
                color: #1b1e1a;
            }
            .navbar-inverse .navbar-brand {
                color: #1b1e1a;
            }

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My LAUNDRY", "Index", "transaksi", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "transaksi")</li>
                    <li>@Html.ActionLink("Paket", "Index", "paket")</li>
                    <li>@Html.ActionLink("Admin", "Index", "admin")</li>
                    <li>@Html.ActionLink("Customer", "Index", "Cust")</li>
                   
                </ul>
                <ul class="nav navbar-nav"> <li style="margin-left:500px;">@Html.ActionLink("Logout", "Index", "login", new {}, new {@class="btn btn-default", @style= " background-color:#f4f7f2;padding:5px;margin-top:10px;" })</li></ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My laundry</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
